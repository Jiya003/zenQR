<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TexttoQRActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Text_ToQR_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:logo="@drawable/splash_img"
        android:paddingStart="30dp"
        app:titleTextColor="@color/black"
        app:subtitleTextColor="@color/black"
        app:title="zenQR"
        app:titleMarginStart="10dp"
        app:titleTextAppearance="@style/ToolbarStyle"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eagle_horizon_font"
            android:text="Text to QR Converter"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Enter your text"
            android:id="@+id/EditText_TexttoQR"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/Convert_TextToQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Convert"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImageView_TextToQR"
            android:layout_gravity="center"
            android:foregroundGravity="center"/>

        <Button
            android:id="@+id/Share_Button_TexttoQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Share"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

    </LinearLayout>