<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:layout_marginBottom="20dp"
        app:title="ZEN SHOPPING"
        app:titleTextAppearance="@color/cardview_dark_background"
        app:logo="@drawable/baseline_shopping_cart_24"
        app:titleMarginStart="20dp"
        app:titleTextColor="@color/white"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="8"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/dress_image_view"
                android:src="@drawable/dress_image"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="0" />

            <RatingBar
                android:id="@+id/dress_image_view_rating_bar"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:stepSize="1.0"
                />

            <ImageView
                android:id="@+id/men_formal_image_view"
                android:src="@drawable/men_formal_image"
                android:layout_height="246dp"
                android:layout_width="205dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="2" />

            <RatingBar
                android:id="@+id/men_formal_image_view_rating_bar"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:stepSize="1.0"
                />

            <ImageView
                android:id="@+id/child_dress_image_view"
                android:src="@drawable/child_dress_image"
                android:layout_height="246dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="205dp"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="4" />
            <RatingBar
                android:id="@+id/child_dress_image_view_rating_bar"
                android:layout_margin="10dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:stepSize="1.0"
                />

            <ImageView
                android:id="@+id/women_formal_image_view"
                android:src="@drawable/tradional_women_image"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_height="246dp"
                android:layout_width="205dp"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="6" />
            <RatingBar
                android:id="@+id/women_image_view_rating_bar"
                android:layout_margin="10dp"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_gravity="center"
                android:stepSize="1.0"
                />

        </GridLayout>

    </ScrollView>

</LinearLayout>